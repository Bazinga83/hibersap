<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <artifactId>hibersap</artifactId>
        <groupId>org.hibersap</groupId>
        <version>1.1.0Beta01</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.hibersap</groupId>
    <artifactId>hibersap-jco</artifactId>
    <name>Hibersap-JCo</name>
    <version>1.1.0Beta01</version>
    <packaging>jar</packaging>
    <description>JCo-specific Hibersap code</description>
    <dependencies>
        <dependency>
            <groupId>org.hibersap</groupId>
            <artifactId>hibersap-core</artifactId>
            <version>1.1.0Beta01</version>
        </dependency>

        <dependency>
            <groupId>com.sap</groupId>
            <artifactId>sap-jco</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-native-libs</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.sap</groupId>
                                    <artifactId>sap-jco</artifactId>
                                    <version>3.0.5</version>
                                    <classifier>darwin64</classifier>
                                    <type>jnilib</type>
                                    <overWrite>true</overWrite>
                                    <destFileName>libsapjco3.jnilib</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/native-lib</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <systemProperties>
                        <property>
                            <name>java.library.path</name>
                            <value>${project.build.directory}/native-lib/</value>
                        </property>
                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>